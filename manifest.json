{
  "manifest_version": 3,
  "name": "Codeforces Function Stub Generator",
  "version": "1.0",
  "description": "Generates function stubs from Codeforces problem statements",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://codeforces.com/*", "https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}